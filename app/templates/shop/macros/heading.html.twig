{% macro heading(level, content, additionalClassNames) %}
    {% set headingStyles = {
        'h1': 'text-2xl font-semibold leading-snug',
        'h2': 'text-xl font-medium leading-snug',
        'h3': 'text-lg font-medium leading-normal',
        'h4': 'text-base font-medium leading-normal',
        'h5': 'text-sm font-medium leading-normal',
        'h6': 'text-xs font-medium leading-tight'
    } %}

    {% set tag = level|default('h1') %}
    {% set classes = (headingStyles[tag]|default('') ~ ' ' ~ (additionalClassNames|default(''))) %}

    <{{ tag }} class="{{ classes|trim }}">
        {{ content }}
    </{{ tag }}>
{% endmacro %}
